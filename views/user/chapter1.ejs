<%- layout("/layouts/trashoBoilerplate") %>

<style>
    * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
    }

    body {
        background: url('/images/avatar_bg.png') no-repeat center center/cover;
        display: flex;
        justify-content: center;
        align-items: center;
        height: 100vh;
        font-family: Arial, sans-serif;
        overflow: hidden;
    }
    
    .slider-container {
        width: 100vw;
        height: 100vh;
        display: flex;
        justify-content: center;
        align-items: center;
        position: relative;
        overflow: hidden;
    }

    .slider {
        display: flex;
        width: 100vw;
        transition: transform 0.5s ease-in-out;
        gap: 150px;
        padding: 0;
        position: fixed;
        left: 300px;
    }

    .box {
        min-width: 850px;
        height: 480px;
        backdrop-filter: blur(10px);
        border-radius: 15px;
        display: flex;
        justify-content: center;
        align-items: center;
        font-size: 20px;
        font-weight: bold;
        color: #333;
        position: relative;
        overflow: hidden;
    }

    iframe {
        border-radius: 15px;
    }

    .overlay {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: rgba(0, 0, 0, 0.4);
        border-radius: 15px;
        transition: opacity 0.5s ease-in-out;
        opacity: 1;
    }

    .hidden {
        opacity: 0;
    }

    /* Navigation Buttons */
    .nav-buttons {
        position: absolute;
        top: 50%;
        width: 100%;
        display: flex;
        justify-content: space-between;
        transform: translateY(-50%);
        z-index: 10;
        pointer-events: none;
    }

    .nav-buttons button {
        background: rgba(0, 0, 0, 0.6);
        color: white;
        border: none;
        padding: 12px 18px;
        font-size: 18px;
        cursor: pointer;
        height: 50px;
        width: 50px;
        border-radius: 50%;
        pointer-events: all;
        transition: 0.3s;
    }

    .nav-buttons button:hover {
        background: rgba(0, 0, 0, 0.8);
    }
</style>

<div class="slider-container">
    <h1>Chapter2</h1>
    <div class="nav-buttons">
        <button id="prevBtn">&lt;</button>
        <button id="nextBtn">&gt;</button>
    </div>

    <div class="slider" id="slider">
        <div class="box">
            <iframe width="850" height="480" 
                src="https://www.youtube.com/embed/R2d-_PoBJSc?si=sfBQy9TgkaBGiDB0&amp;controls=0" 
                title="YouTube video player" 
                frameborder="0" 
                allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share" 
                referrerpolicy="strict-origin-when-cross-origin" 
                allowfullscreen>
            </iframe>
        </div>

        <div class="box" id="secondBox">
            <iframe width="850" height="480" 
                src="https://www.youtube.com/embed/R2d-_PoBJSc?si=EQkEddyYop02aJ6m" 
                title="YouTube video player" 
                frameborder="0" 
                allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share" 
                referrerpolicy="strict-origin-when-cross-origin" 
                allowfullscreen>
            </iframe>
        </div>

        <div class="next-btn">
            <a class="btn btn-warning" href="/trasho/chapter2"><strong>Next</strong></a>
        </div>
    </div>
</div>

<script>
    let currentIndex = 0;
    const slider = document.getElementById("slider");
    const slides = document.querySelectorAll(".box");
    const prevBtn = document.getElementById("prevBtn");
    const nextBtn = document.getElementById("nextBtn");

    function updateSlider() {
        const slideWidth = slides[0].offsetWidth + 150; // Adjust gap
        slider.style.transform = `translateX(-${currentIndex * slideWidth}px)`;

        // Button visibility
        prevBtn.style.display = currentIndex === 0 ? "none" : "block";
        nextBtn.style.display = currentIndex === slides.length - 1 ? "none" : "block";
    }

    nextBtn.addEventListener("click", () => {
        if (currentIndex < slides.length - 1) {
            currentIndex++;
            updateSlider();
        }
    });

    prevBtn.addEventListener("click", () => {
        if (currentIndex > 0) {
            currentIndex--;
            updateSlider();
        }
    });

    // Initialize slider
    updateSlider();
</script>

